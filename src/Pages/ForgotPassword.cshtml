@page
@model ePiggyWeb.Pages.ForgotPasswordModel

<div class="container login-container bg-primary border">
    @if (Model.CodeSent)
    {
        <p class="text-warning">Recovery code has been sent to your email!</p>
    }
<form method="post">
    <input asp-for="Email" type="hidden" />
    <label class="text-light">Recovery Code</label>
    <div class="form-group">
        <input asp-for="EnteredCode" type="text" autocomplete="off" />
        <span asp-validation-for="EnteredCode" class="text-danger"></span>
    </div>
    <label class="text-light">New password</label>
    <div class="form-group">
        <input asp-for="Password" type="password" />
    </div>
    <label class="text-light">Confirm password</label>
    <div class="form-group">
        <input asp-for="PasswordConfirm" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <span asp-validation-for="Password" class="text-warning"></span>
    <div class="form-group">
        <input class="btn btn-outline-light" type="submit" value="Confirm" />
    </div>
    <div class="form-group">
        <input asp-page-handler="Cancel" class="btn btn-outline-warning" type="submit" value="Cancel Recovery" />
    </div>


    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p class="text-danger">@Model.ErrorMessage</p>
    }
</form>
</div>
